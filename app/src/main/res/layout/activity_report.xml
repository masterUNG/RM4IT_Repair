                android:layout_height="wrap_content" >



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/risk8"
                    android:id="@+id/btnGroup8"
                    android:onClick="onButtonClick"
                    android:layout_marginLeft="1dp" />
            </LinearLayout>

